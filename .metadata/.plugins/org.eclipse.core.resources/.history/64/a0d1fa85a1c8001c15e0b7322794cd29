package InterpolationSearch;

public class Main {
	
	public static void main(String[] args) {
		
		int[] array = {1,2,3,4,5,6,7,8};
		
		int index = interpolationSearch(array, 8);
		
		if(index != -1) {
			System.out.println("Value found: " + index);
		}else {
			System.out.println("Value not found: " + index);
		}
	}

	private static int interpolationSearch(int[] array, int target) {
		
		int low = 0;
		int high = array.length - 1;
		
		int prob = low + (high - low) * (target - array[low]) / (array[high] - array[low]);
		System.out.println("Prob: " + prob);
		
		while(target >= array[prob] && target <= array[prob] && low >= high) {
			
			if(target == array[prob]) return prob;
			else if (target < array[prob]) low = prob + 1;
			else high = prob - 1;
		}

		return -1;
		
	}

}
